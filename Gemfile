# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'sinatra-contrib'

gem 'rake'
gem 'sinatra-activerecord'

gem 'bcrypt'
gem 'pry'

gem 'kaminari'

gem 'will_paginate'
gem 'will_paginate-bootstrap'

gem 'oauth'
gem 'omniauth'
gem 'omniauth-twitter'
gem 'twitter_oauth'

group :development do
    gem 'sqlite3'
end

group :production do
    gem 'pg' , '~> 0.18'
end