	<% if !@ranks.empty? %>
	<div class = "container">
			<div class = "table-responsive">
				<table  align="center" class="table table-default table-striped table-hover table-condensed table-bordered">
					<thead>
						<tr>
							<th scope="col">順位</th>
						      <th scope="col">ユーザー名</th>
						      <th scope="col">一日の精進数</th>
						      <th scope="col">総精進数</th>
						    </tr>
				  		</thead>
					<tbody>
						<% @ranks.each do |rank| %>
							<tr>
								<th class = "rank"><%= rank.effort_rank %></th>
								<td class="user"><%= rank.user_id %></td>
								<td class="effort_count"><%= rank.effort_count %></td>
								<td class="now_count"><%= rank.now_count%></td>
							</tr>
						<% end %>
						<%= will_paginate @ranks, renderer: BootstrapPagination::Sinatra,
							previous_label: '&#8592; &nbsp;前', next_label: '次 &#8594;',
							inner_window: 1, outer_window: 0%>
					<tbody>
				</table>
			</div>
	</div>
	<%else%>
		<p align= "center">検索結果はありません</p>
	<% end%>
	
	